@model IEnumerable<Post>

@{

}
<h2>Home page!</h2>

<div>
    <ul>
        @foreach (var post in Model)
        {
        <li>
            <a asp-controller="Home" asp-action="Details" asp-route-id="@post.Id">
                @post.Title
            </a>
            |
            <a asp-controller="Home" asp-action="Edit" asp-route-id="@post.Id">
                Edit
            </a>
            |
            <a asp-controller="Home" asp-action="Delete" asp-route-id="@post.Id">
                Delete
            </a>
        </li>
        }
    </ul>
</div>